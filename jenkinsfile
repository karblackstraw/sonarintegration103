pipeline {
    agent any
    stages {
        stage("Code Checkout from Gihub") {
            steps {
                git branch: 'master',
                credentialsId: 'Github-Access',
                url: 'https://github.com/karblackstraw/sonarintegration103.git'
            }
        }
        stage('Code Quality Check via SonarQube') {
                    environment {
                    scannerHome = tool 'SonarQubeScanner-4.6.2'
                    credentialsId = credentials("SonarQube-Server3")
				    projectKey = 'jenkins-pipeline102'
                   }
                   steps {
                    withSonarQubeEnv("SonarQube-8.6") {
                    sh "${scannerHome}/bin/sonar-scanner -D sonar.projectKey=${projectKey} -D sonar.credentialsId=${credentialsId} -D sonar.sources=."
                    }
            }
        }
    }
}
